body {
	overflow: hidden;
}

.no-select {
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-user-drag: none;
    user-drag: none;
}

#trending-navbar {
	height: 3.5em;
	min-width: 350px;
	border-bottom: 0px;
	background-color: #203864;
	box-shadow: 0px 0px 9px 1px rgba(0,0,0,0.9);
}

#trending-navbar #cite-logo.navbar-brand {
    height: 2.5em;
    padding: 0px;
    margin-left: 1em;
    margin-right: 1em;
    margin-bottom: 0em;
    border-radius: 0px 0px 11px 9px;
    background-color: #FFFFFF;
    box-shadow: 0px 1px 4px 2px rgba(0, 0, 0, 0.7);
}

#trending-navbar .navbar-brand#cite-logo > img {
    height: 100%;
    padding: 8px 22px;
}

html, body, #canvas-container, #canvasOne {
	width: 100%;
	height: 100%;
}

#coordinate-overlay {
    min-width: 202px;
    position: fixed;
    bottom: 0.3em;
    right: 0;
    color: #fff;
}

#coordinate-overlay > .coordinate-container {
    padding: 0.6em;
    background-color: rgb(32, 56, 100);
    margin: 0em 0.3em;
    border-radius: 15px 15px 0px 0px;
    width: 6.8em;
}

#coordinate-overlay > .coordinate-container > .coordinate-icon {
    width: 1.8em;
    padding-right: 1em;
}

#side-panel {
	height: 80%;
	width: 20em;
	position: absolute;
	left: -17em;
	top: 5em;
	background-color: #203864;
	transition: left 0.8s ease 0s;
}

#side-panel.open {
	left: 0;
}

#side-panel #side-panel-toggle {
    width: 40px;
    height: 40px;
    margin-top: 5px;
    position: fixed;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 1.5em;
    color: #ffffff;
    transition: background-color 0.3s ease 0s;
}

#side-panel #side-panel-toggle:hover {
	cursor: pointer;
}


