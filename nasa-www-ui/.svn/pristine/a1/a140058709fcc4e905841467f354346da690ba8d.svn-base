function findAllLocations() {
    $.ajax({
        method: "GET",
        url: listAllLocationsUrl,
        dataType: "json",
        success: function (data, status, jqXHR) {
            createDomforLocations(data);
        },
        error: function (xhr, status) {
            console.log("error");
            console.log(xhr);
            console.log(status);
        }
    });
}

